<?xml version="1.0" encoding="utf-8" ?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?android:colorControlHighlight">
    <item>
        <layer-list>
            <item>
                <shape android:tintMode="src_atop">
                    <solid android:color="#80ffffff" />
                    <corners android:radius="@*android:dimen/config_dialogCornerRadius" />
                </shape>
            </item>
            <item
                android:bottom="2.0dp"
                android:start="2.0dp"
                android:end="2.0dp"
                android:top="2.0dp">
                <shape android:tintMode="src_atop">
                    <gradient
                        android:angle="270.0"
                        android:endColor="#FFF0F0F0"
                        android:startColor="#FFD4D4D4" />
                    <corners android:radius="@*android:dimen/config_dialogCornerRadius" />
                </shape>
            </item>
            <item
                android:bottom="4.0dp"
                android:start="4.0dp"
                android:end="4.0dp"
                android:top="4.0dp">
                <shape android:tintMode="src_atop">
                    <gradient
                        android:angle="90.0"
                        android:endColor="#FFF0F0F0"
                        android:startColor="#FFD4D4D4" />
                    <corners android:radius="@*android:dimen/config_dialogCornerRadius" />
                </shape>
            </item>
        </layer-list>
    </item>
</layer-list>

